{% extends 'base.html.twig' %}

{% block title %}Squiz | Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

<div style="background: #292929; margin-left: 35%; margin-right: 35%; padding-left:5%; padding-right:5%;">
    <h1 class="h3 mb-3 font-weight-normal text-center" style="color: #DDDDDD; margin-top: 40%; padding-top: 10%;">Connexion</h1>
    <label for="inputEmail" style="color: #DDDDDD; padding-bottom: 2.5%;">Pseudo :</label>
    <input value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" autocomplete="pseudo" required autofocus>
    <label for="inputPassword" style="color: #DDDDDD; padding-bottom: 2.5%; padding-top: 4%;">Mot de passe :</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="text-center">
        <button type="submit button" class="btn btn-outline" style="border-color: #DDDDDD; color: #DDDDDD; margin-top: 10%; margin-bottom: 10%;">
            Se connecter
        </button>
    </div>
</div>

</form>
{% endblock %}
